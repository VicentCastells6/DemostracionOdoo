<odoo>
  <data>

    <record model="ir.ui.view" id="view_demo_list">
      <field name="name">demo.list</field>
      <field name="model">demo.demo</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
          <field name="active"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="view_demo_form">
      <field name="name">demo.form</field>
      <field name="model">demo.demo</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="value"/>
              <field name="value2"/>
              <field name="description"/>
              <field name="active"/>
              <field name="image" widget="image"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="view_demo_kanban">
      <field name="name">demo.kanban</field>
      <field name="model">demo.demo</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
          <field name="active"/>
          <field name="image"/>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click">
                <div class="oe_kanban_details">
                  <t t-if="record.image.raw_value">
                    <img t-att-src="kanban_image('demo.demo', 'image', record.id)" class="oe_kanban_image"/>
                  </t>
                  <strong><field name="name"/></strong>
                  <div><field name="value"/></div>
                  <div><field name="value2"/></div>
                  <div><field name="active"/></div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <record model="ir.actions.act_window" id="action_demo">
      <field name="name">demo</field>
      <field name="res_model">demo.demo</field>
      <field name="view_mode">list,form,kanban</field>
    </record>

    <menuitem id="menu_demo_root" name="Demo"/>
    <menuitem id="menu_demo" name="Demo" parent="menu_demo_root" action="action_demo"/>

  </data>
</odoo>
